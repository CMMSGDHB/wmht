extends ../common/common
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 管理员添加
  .mws-panel-body.no-padding
    form.mws-form(action='/admin/userdoadd' method="POST")
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 管理员姓名
          .mws-form-item
            input.large(type='text' name='uname' placeholder = '姓名')
        .mws-form-row
          label.mws-form-label 管理员密码
          .mws-form-item
            input.large(type='text' name = 'pwd' placeholder = '密码')
      .mws-button-row
        input.btn.btn-danger(type='submit' value='添加')
        input.btn(type='reset' value='重置')
